pipeline {
    agent any
    environment {
        DOCKER_HUB_USER = 'roshanalii'
        DOCKER_HUB_PASS = 'Aa19960415Aa#'
        REPO_URL = 'https://github.com/RoshanAlii/NCCDB'
        DOCKER_IMAGE_NAME = 'roshanalii/nccdb'
        FRONTEND_PORT = '8080'
    }
    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning the repository...'
                git branch: 'master', credentialsId: 'github-credentials', url: "${REPO_URL}"
            }
        }
        stage('Build Application') {
            steps {
                echo 'Building the application...'
                // Add your build commands here
            }
        }
        stage('Test Application') {
            steps {
                echo 'Running tests...'
                // Add your test commands here
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    sh "docker build -t ${DOCKER_IMAGE_NAME}:latest ."
                }
            }
        }
        stage('Push Docker Image to Hub') {
            steps {
                script {
                    echo 'Pushing Docker image to Docker Hub...'
                    sh "echo ${DOCKER_HUB_PASS} | docker login -u ${DOCKER_HUB_USER} --password-stdin"
                    sh "docker push ${DOCKER_IMAGE_NAME}:latest"
                }
            }
        }
        stage('Deploy Frontend') {
            steps {
                script {
                    echo 'Deploying the frontend...'
                    sh "docker run -d -p ${FRONTEND_PORT}:80 ${DOCKER_IMAGE_NAME}:latest"
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution completed.'
        }
        success {
            echo 'Pipeline executed successfully.'
        }
        failure {
            echo 'Pipeline failed. Please check logs.'
        }
    }
}
